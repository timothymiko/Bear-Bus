<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bearbusdriver.MainActivity$PlaceholderFragment">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <TextView
        android:id="@+id/pickup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pickupLabel"
        android:layout_below="@+id/map"
        android:layout_margin="8dip"/>

    <Spinner
        android:id="@+id/pspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickup_title"
        android:layout_margin="4dip"/>

    <TextView
        android:id="@+id/dropoff_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dropoffLabel"
        android:layout_below="@id/pspinner"
        android:layout_margin="8dip" />

    <Spinner
        android:id="@+id/dspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropoff_title"
        android:layout_margin="4dip"/>

    <Button
        android:id="@+id/request"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/btnRequest" />

</RelativeLayout>